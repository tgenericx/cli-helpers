#!/usr/bin/env bash

set -euo pipefail

undo_latest_tag() {
  if ! git rev-parse --git-dir &>/dev/null; then
    echo "âŒ Not inside a Git repository."
    exit 1
  fi

  local tag
  tag=$(git describe --tags --abbrev=0 2>/dev/null || true)

  if [[ -z "$tag" ]]; then
    echo "âš ï¸  No tags found in this repository."
    exit 1
  fi

  echo "ğŸ—‘ï¸  Tag to delete: $tag"
  read -p "Are you sure you want to delete this tag locally and remotely? (y/N): " confirm

  case "$confirm" in
  [yY][eE][sS] | [yY])
    git tag -d "$tag"
    git push origin ":refs/tags/$tag"
    echo "âœ… Deleted tag '$tag' locally and remotely."
    ;;
  *)
    echo "âŒ Aborted. Tag '$tag' was not deleted."
    ;;
  esac
}

undo_latest_tag
